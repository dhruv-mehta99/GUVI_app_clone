<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsFragment"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textStyle="bold"
        android:paddingBottom="2dp"
        android:paddingTop="13dp"
        android:text="We'd love to hear from you"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For all kind of queries related to course, zenclass and
other platform related information"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:paddingBottom="0dp"
        android:textColor="@color/black"
        android:paddingHorizontal="12dp"
        android:paddingVertical="15dp"
        android:background="#F3F1F1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="13dp"
        android:paddingHorizontal="25dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_mail_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="cs@guvi.in"
            android:textSize="14sp"
            android:layout_marginLeft="171dp"
            />
        <ImageView
            android:id="@+id/email_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You will get a reply back from us within 48 hours"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:paddingHorizontal="10dp"
        android:textSize="14sp"
        android:background="#F3F1F1"
        android:paddingVertical="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        android:paddingHorizontal="25dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Chat with us"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="(9AM - 9PM)"
            android:textSize="14sp"
            android:layout_marginLeft="116dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        android:paddingHorizontal="25dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_share"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Follow us"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="52dp"/>

        <ImageView
            android:id="@+id/img_facebook_contactus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_facebook"
            android:layout_marginHorizontal="15dp"/>

        <ImageView
            android:id="@+id/img_instagram_contactus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/instagram"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="15dp"/>
        <ImageView
            android:id="@+id/img_twitter_contactus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_twitter"
            android:layout_marginHorizontal="15dp"/>
        <ImageView
            android:id="@+id/img_telegram_contactus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_telegram"
            android:layout_marginHorizontal="15dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Visit Us"
        android:textColor="@color/black"
        android:paddingVertical="15dp" />

   <WebView
       android:layout_width="415dp"
       android:layout_height="370dp"
       android:id="@+id/maps_webview"/>

</LinearLayout>